<Window x:Class="Coursework.Windows.OrderEmployeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coursework.Windows"
        mc:Ignorable="d"
        Title="Призначення працівників на замовлення" Height="250" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <ComboBox FontSize="14" Name="AddEmployeeComboBox" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" Width="260" Height="30"/>
        <ComboBox FontSize="14" Name="RemoveEmployeeComboBox" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Width="260" Height="30"/>
        <Button Content="Призначити працівника" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click"/>
        <Button Content="Вилучити працівника" HorizontalAlignment="Left" Margin="50,160,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click_1"/>
    </Grid>
</Window>
