<Window x:Class="Coursework.Windows.NewCategorieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coursework.Windows"
        mc:Ignorable="d"
        Title="Доавання категорії" Height="140" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <Label FontSize="14" Content="Назва:" HorizontalAlignment="Left" Margin="0,5,0,0" Width="70" Height="30" VerticalAlignment="Top"/>
        <TextBox FontSize="14" Name="NameTextBox" HorizontalAlignment="Left" Height="30" Margin="75,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button Content="Додати" HorizontalAlignment="Left" Margin="75,60,0,0" VerticalAlignment="Top" Width="150" Height="35" Click="Button_Click"/>

    </Grid>
</Window>
